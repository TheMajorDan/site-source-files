doctype html
block vars
    - var bodyclass = null;
html(lang='en')
    head
        meta(charset='utf-8')
        meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
        meta(name='viewport', content='width=device-width')
        link(rel='alternate', href=locals.url + '/feed.xml', type='application/rss+xml', title=locals.description)
        block head
        title
            block title
                = locals.name
        link(rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/normalize/6.0.0/normalize.css" integrity="sha256-G5VA29cSH+JxK8+MeAVL36QhUlTv7Fipck5dnVXpUXw=" crossorigin="anonymous")
        link(rel="stylesheet" href="https://fonts.googleapis.com/css?family=Open+Sans")
        link(rel='stylesheet', href=contents.css['main.css'].url)
    body

        aside
            h1
                a(href=locals.url)= locals.name
            img(src="/img/logo-site.png" class="logo-img")
            p.description= locals.description

            .footer
                block footer
                    p &copy; #{ new Date().getFullYear() }&nbsp;
                        a(href=locals.twitter)= locals.owner

        #content
            block header
            block content

        .footer
            block footer
                p &copy; #{ new Date().getFullYear() }
                    a(href=locals.twitter)= locals.owner
